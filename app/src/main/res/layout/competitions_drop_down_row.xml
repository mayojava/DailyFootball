<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
	
	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/logoDivider"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintGuide_percent="0.80"/>
	
	<TextView
			android:id="@+id/competitionName"
			android:textSize="16sp"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:padding="10dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@id/logoDivider"
			tools:text="Premier League"/>
	
	<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/competitionLogo"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:scaleType="fitCenter"
			app:layout_constraintTop_toTopOf="@id/competitionName"
			app:layout_constraintBottom_toBottomOf="@id/competitionName"
			app:layout_constraintLeft_toRightOf="@id/competitionName"
			app:layout_constraintRight_toRightOf="parent"
			tools:srcCompat="@drawable/laliga" />

</androidx.constraintlayout.widget.ConstraintLayout>